<Window x:Class="OzemstvoWPF.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OzemstvoWPF"
        mc:Ignorable="d"
        Title="Rule Editor"
        Height="417"
        Width="366">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label
            x:Name="RuleNameInputLabel"
            Content="Rule Name"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="0"
            Grid.Column="0"/>
        <TextBox
            x:Name="RuleNameInput"
            HorizontalAlignment="Right"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"/>

        <Label
            x:Name="OpenInInputLabel"
            Content="Open In"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="1"
            Grid.Column="0"/>
        <ComboBox
            x:Name="OpenInInput"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Grid.Row="1"
            Grid.Column="1"
            Width="120"/>

        <Label
            x:Name="TypeInputLabel"
            Content="Matching Type"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="2"
            Grid.Column="0"/>
        <ComboBox
            x:Name="TypeInput"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            SelectionChanged="TypeInput_SelectionChanged"/>

        <Label
            x:Name="DataInputLabel"
            Content="Data"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="3"
            Grid.Column="0"/>
        <TextBox
            x:Name="DataInput"
            HorizontalAlignment="Right"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Grid.Row="3"
            Grid.Column="1"
            Width="120"/>

        <Label
            x:Name="TemplateInputLabel"
            Content="Template (optional)"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="4"
            Grid.Column="0"/>
        <TextBox
            x:Name="TemplateInput"
            Text="{}{{url}}"
            HorizontalAlignment="Right"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Grid.Row="4"
            Grid.Column="1"
            Width="120"/>
        
        <Button
            x:Name="SubmitButton"
            Grid.Column="1"
            Grid.Row="5"
            Margin="0,0,10,10"
            Content="Submit"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="SubmitButton_Click"/>
    </Grid>
</Window>
