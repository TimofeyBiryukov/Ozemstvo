<Window x:Class="OzemstvoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OzemstvoWPF"
        xmlns:controls="clr-namespace:OzemstvoWPF.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="417" Width="366">
    <Grid>
        <ItemsControl
            x:Name="itemControlRulesList"
            Margin="0,0,0,47"
            d:ItemsSource="{d:SampleData ItemCount=5}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:Rule
                        RuleName="{Binding Name}"
                        Margin="2,5,2,0" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button
            x:Name="button"
            Content="Add"
            HorizontalAlignment="Right"
            Margin="0,0,20,20"
            Padding="5,2,5,2"
            VerticalAlignment="Bottom" /> 
    </Grid>
</Window>
