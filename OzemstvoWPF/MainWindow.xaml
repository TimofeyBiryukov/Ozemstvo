<Window x:Class="OzemstvoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OzemstvoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="417" Width="366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TabControl x:Name="tabControl">
            <TabItem Header="Rules">
                <Grid Background="#FFE5E5E5">
                    <DataGrid
                        x:Name="rulesGrid"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        RowEditEnding="rulesGrid_RowEditEnding"
                    />
                </Grid>
            </TabItem>
            <TabItem Header="Browsers" IsEnabled="False"></TabItem>
        </TabControl>

        <TextBlock x:Name="debugBlock" HorizontalAlignment="Left" Margin="10,153,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
